{
    "name": "@fangzhongya/vue-lib",
    "private": false,
    "version": "0.0.2-7",
    "type": "module",
    "description ": "vue 组件库",
    "author": "fangzhongya ",
    "license": "MIT",
    "keywords": [
        "vue 组件库"
    ],
    "repository": {
        "type": "git",
        "url": " https://github.com/fangzhongya/vue-lib.git"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "packageManager": "pnpm",
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "dev:packa": "ts-node node/package.ts",
        "dev": "pnpm -C archive dev",
        "dev:v": "ts-node node/version.ts",
        "build": "tsup",
        "all:v": "pnpm -r --filter=./packages/** run dev:v",
        "all:c": "pnpm -r --filter=./packages/** run dev:c",
        "build:all": "pnpm -r --filter=./packages/** run build:all & pnpm build & pnpm -C packages/theme all",
        "build:archive": "pnpm run -C archive build",
        "pub": "pnpm -r publish --access public --no-git-checks",
        "all": "pnpm build:all & pnpm all:v & pnpm pub"
    },
    "dependencies": {
        "@fangzhongya/vue-lib-components": "workspace:^1.0.4",
        "@fangzhongya/vue-lib-directives": "workspace:^1.0.7",
        "@fangzhongya/vue-lib-hooks": "workspace:^1.0.5",
        "@fangzhongya/vue-lib-locale": "workspace:^1.0.5",
        "@fangzhongya/vue-lib-theme": "workspace:^1.0.1",
        "@fangzhongya/vue-lib-utils": "workspace:^1.0.5",
        "vue": "^3.2.47"
    },
    "devDependencies": {
        "@fangzhongya/create": "0.2.2-36",
        "@types/node": "^18.13.0",
        "ts-node": "^10.9.1",
        "tsup": "^6.6.3",
        "typescript": "^4.9.5"
    },
    "exports": {
        "./*": "./*",
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "*.d.ts",
        "dist"
    ]
}
